<Page x:Class="CherkashinProject.Pages.PageAllUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherkashinProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAllUser">

    <Grid>
        <StackPanel>
            <DataGrid AutoGenerateColumns="False" Name="DataGridAllUser">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Width="*" Binding="{Binding UserId}"/>
                    <DataGridTextColumn Header="Login" Width="*" Binding="{Binding Login}"/>
                    <DataGridTextColumn Header="RoleId" Width="*" Binding="{Binding Role.RoleName}"/>
                    <DataGridTextColumn Header="User name" Width="*" Binding="{Binding UserName}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
