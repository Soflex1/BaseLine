<Page x:Class="CherkashinProject.Pages.PageAllTovar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherkashinProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAllTovar">

    <Grid>
        <StackPanel>
            <DataGrid AutoGenerateColumns="False" Name="DataGridTovar">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер товара" Width="*" Binding="{Binding TovarId}"/>
                    <DataGridTextColumn Header="Наименование" Width="*" Binding="{Binding TovarName}"/>
                    <DataGridTextColumn Header="Артикул" Width="*" Binding="{Binding TovarArticle}"/>
                    <DataGridTextColumn Header="Цвет" Width="*" Binding="{Binding TovarColor1.Color}"/>
                    <DataGridTextColumn Header="Страна происхождения" Width="*" Binding="{Binding Country.County}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
