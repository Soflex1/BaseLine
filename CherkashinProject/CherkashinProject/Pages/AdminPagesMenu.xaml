<Page x:Class="CherkashinProject.Pages.AdminPagesMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherkashinProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:props="clr-namespace:CherkashinProject.Properties"
      Title="AdminPagesMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Admin menu" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"></TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="{x:Static props:Resources.AllUsers}" Click="Button_Click"></Button>
            <Button x:Name="Btn_Tovar" Click="Btn_Tovar_Click" Content="{x:Static props:Resources.AllTovar}"></Button>
            <Button Content="Button"></Button>
            <Button Content="Button"></Button>
        </StackPanel>
    </Grid>
</Page>
